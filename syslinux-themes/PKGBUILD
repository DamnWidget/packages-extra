pkgbase=syslinux-themes
pkgname=('manjaro-syslinux-theme' 'sonar-syslinux-theme')
pkgver=20161009
pkgrel=5
arch=('any')
url="https://github.com/manjaro/desktop-settings"
license=('GPL')
depends=('syslinux')
makedepends=('git')
provides=('syslinux-theme')
conflicts=('syslinux-theme' 'isolinux')
replaces=('syslinux-theme' 'isolinux')
source=("git+$url.git")
sha256sums=('SKIP')

pkgver() {
	date +%Y%m%d
}

package_manjaro-syslinux-theme() {
    pkgdesc='Manjaro Linux syslinux theme'

	install -d $pkgdir/usr/share/manjaro-tools/syslinux-theme
	cp -v $srcdir/desktop-settings/shared/syslinux/manjaro/* $pkgdir/usr/share/manjaro-tools/syslinux-theme
	cp -v $srcdir/desktop-settings/shared/syslinux/{lng,hlp,cfg}/* $pkgdir/usr/share/manjaro-tools/syslinux-theme
# 	cp -v $srcdir/desktop-settings/shared/syslinux/hlp/* $pkgdir/usr/share/manjaro-tools/syslinux-theme
# 	cp -v $srcdir/desktop-settings/shared/syslinux/cfg/* $pkgdir/usr/share/manjaro-tools/syslinux-theme
}

package_sonar-syslinux-theme() {
    pkgdesc='Sonar Linux syslinux theme'

	install -d $pkgdir/usr/share/manjaro-tools/syslinux-theme
	cp -v $srcdir/desktop-settings/shared/syslinux/sonar/* $pkgdir/usr/share/manjaro-tools/syslinux-theme
	cp -v $srcdir/desktop-settings/shared/syslinux/{lng,hlp,cfg}/* $pkgdir/usr/share/manjaro-tools/syslinux-theme
# 	cp -v $srcdir/desktop-settings/shared/syslinux/hlp/* $pkgdir/usr/share/manjaro-tools/syslinux-theme
# 	cp -v $srcdir/desktop-settings/shared/syslinux/cfg/* $pkgdir/usr/share/manjaro-tools/syslinux-theme
}
