# Maintainer: artoo <artoo@manjaro.org>

pkgname=python-pykwalify
pkgver=1.5.1
pkgrel=1
pkgdesc="Python lib/cli for JSON/YAML schema validation"
arch=('any')
url="http://github.com/grokzen/pykwalify"
license=('MIT')
depends=('python-docopt' 'python-yaml' 'python-dateutil')
makedepends=('python' 'python-pip')

build() {
    pip install --no-deps --target="pykwalify" pykwalify
}
package() {
    mkdir -p $pkgdir/usr/lib/python3.5/site-packages/
    cp -r $srcdir/pykwalify/* $pkgdir/usr/lib/python3.5/site-packages/
}
