pkgname=xfdesktop
#_git=ae4013a095820417b090db14a6d037e8956fb67c
pkgver=4.11.7
pkgrel=1
pkgdesc="A desktop manager for Xfce"
arch=('i686' 'x86_64')
url="http://www.xfce.org/"
license=('GPL2')
groups=('xfce4')
depends=("libxfce4ui>=4.11" 'thunar' 'garcon' 'hicolor-icon-theme' 'libwnck')
makedepends=('intltool' 'xfce4-dev-tools')
install=xfdesktop.install
source=("http://archive.xfce.org/src/xfce/xfdesktop/4.11/${pkgname}-${pkgver}.tar.bz2")
#source=("${pkgname}-${pkgver}-${pkgrel}.tar.bz2::http://git.xfce.org/xfce/${pkgname}/snapshot/${pkgname}-${_git}.tar.bz2")
sha256sums=('0f8bd03e38bb64182d7401fad2af8fe726e11f5c825b8e964baf0ed3eb637984')

build() {
  #cd "${srcdir}/${pkgname}-${_git}"
  cd "${srcdir}/${pkgname}-${pkgver}"

  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --disable-static \
    --enable-gio-unix \
    --enable-thunarx \
    --disable-notifications \
    --disable-debug

  make
}

package() {
  #cd "${srcdir}/${pkgname}-${_git}"
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
