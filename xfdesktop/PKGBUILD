pkgname=xfdesktop
_git=a209a9afc4fc093d909b90c1a6b7dc35669a3ec7
pkgver=4.12.0
pkgrel=1.2
pkgdesc="A desktop manager for Xfce"
arch=('i686' 'x86_64')
url="http://www.xfce.org/"
license=('GPL2')
groups=('xfce4')
depends=("libxfce4ui>=4.11" 'thunar' 'garcon' 'hicolor-icon-theme' 'libwnck')
makedepends=('intltool' 'xfce4-dev-tools')
install=xfdesktop.install
#source=("http://archive.xfce.org/src/xfce/xfdesktop/4.11/${pkgname}-${pkgver}.tar.bz2")
#source=("${pkgname}-${pkgver}-${pkgrel}.tar.bz2::http://git.xfce.org/xfce/${pkgname}/snapshot/${pkgname}-${_git}.tar.bz2")
source=("${pkgname}-${pkgver}-${pkgrel}.tar.gz::https://github.com/thad-fisch/xfdesktop/archive/${_git}.tar.gz")
sha256sums=('b6c77406f8e72cf2ad9ed30ad029adb339f82d3fc852713f32b0c3ecfd3ddc15')

prepare() {
  #cd "$srcdir/$pkgname-$pkgver"
  cd "$srcdir/$pkgname-$_git"
  sed -i -e 's|@REVISION@|MANJARO|g' configure.ac.in
  sed -i -e 's|git]|]|' configure.ac.in
}

build() {
#  cd "${srcdir}/${pkgname}-${pkgver}"
  cd "${srcdir}/${pkgname}-${_git}"

  #./configure \
  ./autogen.sh \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --disable-static \
    --enable-gio-unix \
    --enable-thunarx \
    --disable-notifications \
    --disable-debug

  make
}

package() {
  cd "${srcdir}/${pkgname}-${_git}"
  #cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install
}
