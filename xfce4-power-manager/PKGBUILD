pkgname=xfce4-power-manager
pkgver=1.3.2
pkgrel=1
#_git=6e4a6e5726cce281a64e467ba14a77b710fffc6f
pkgdesc="Power manager for Xfce desktop"
arch=('i686' 'x86_64')
url="http://www.xfce.org/"
license=('GPL2')
groups=('xfce4')
depends=('xfce4-panel' 'upower' 'udisks' 'libnotify' 'hicolor-icon-theme')
makedepends=('intltool' 'xfce4-dev-tools')
#makedepends=('intltool' 'xfce4-dev-tools' 'git')
install=$pkgname.install
source=("http://archive.xfce.org/src/xfce/xfce4-power-manager/1.3/${pkgname}-${pkgver}.tar.bz2")
#source=(git://git.xfce.org/xfce/xfce4-power-manager)
