build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  #cd "${srcdir}/${pkgname}-${_git}"
  
  #./autogen.sh \
  ./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --sbindir=/usr/bin \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --disable-network-manager \
    --enable-polkit \
    --enable-dpms \
    --disable-debug

  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  #cd "${srcdir}/${pkgname}-${_git}"
  make DESTDIR="${pkgdir}" install
}
