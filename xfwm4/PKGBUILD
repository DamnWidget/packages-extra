pkgname=xfwm4
_pkgname=xfwm4
pkgver=4.12.2
pkgrel=1.2
_git=c34402f945b86251c28cb6e4d11e506d58ea297e
pkgdesc="Xfce window manager"
arch=('i686' 'x86_64')
url="http://www.xfce.org/"
license=('GPL2')
groups=('xfce4')
depends=('libxfce4ui' 'libwnck' 'libdrm' 'libxpresent' 'hicolor-icon-theme' 'exo')
makedepends=('intltool' 'xfce4-dev-tools')
options=('!libtool')
install=$_pkgname.install
source=(#http://archive.xfce.org/src/xfce/$_pkgname/4.12/$_pkgname-$pkgver.tar.bz2
        $pkgname-$pkgver-$pkgrel.tar.bz2::http://git.xfce.org/xfce/$pkgname/snapshot/$pkgname-$_git.tar.bz2)
sha256sums=('96e0cf0f6d34b4e946a3d09b6c842b23ae1fa90fcb82f1cdcf14af36b55a4a30')

provides=("$_pkgname")
conflicts=("$_pkgname" "$_pkgname-git")

prepare() {
  #cd "$srcdir/$pkgname-$pkgver"
  cd "$srcdir/$pkgname-$_git"
  sed -i -e 's|micro], \[0|micro], \[2|g' configure.ac.in
  sed -i -e 's|@REVISION@|MANJARO|g' configure.ac.in
  sed -i -e 's|git]|]|' configure.ac.in
}

build() {
  #cd "$srcdir/$_pkgname-$pkgver"
  cd "$srcdir/$pkgname-$_git"

  #./configure \
  ./autogen.sh \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --disable-static \
    --enable-startup-notification \
    --enable-randr \
    --enable-compositor \
    --enable-xsync \
    --disable-debug
  make
}

package() {
  #cd "$srcdir/$_pkgname-$pkgver"
  cd "$srcdir/$pkgname-$_git"
  make DESTDIR="$pkgdir" install
}
