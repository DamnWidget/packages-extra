# Maintainer: anexation

pkgname=menda-icon-themes
pkgver=20$(date +%y%m%d)
pkgrel=1
pkgdesc="Menda Icon Themes (Circle, Square)"
url="https://github.com/anexation/menda-icon-themes"
arch=('any')
license=('GPL')
source=("$pkgname-$pkgver.zip::https://github.com/anexation/menda-icon-themes/archive/master.zip")
depends=('librsvg')
makedepends=()
options=(!strip)
md5sums=('SKIP')

package() {
  cd "${srcdir}"/menda-icon-themes-master
  mkdir -p "${pkgdir}/usr/share/icons"
  cp -r Menda-Circle "${pkgdir}/usr/share/icons/"
  cp -r Menda-Square "${pkgdir}/usr/share/icons/"
  find "${pkgdir}/usr/share/icons" -type d -exec chmod 755 '{}' \;
  find "${pkgdir}/usr/share/icons" -type f -exec chmod 644 '{}' \;
}
