package_manjaro-iso-profiles-base() {
	pkgdesc='Manjaro Linux iso profiles base'
	depends=("manjaro-tools-iso>=${_mt_ver}")
	conflicts=('manjaro-iso-profiles-openrc')

	install -d $pkgdir/usr/share/manjaro-tools/iso-profiles
	cp $srcdir/shared $pkgdir/usr/share/manjaro-tools/iso-profiles/
}

package_manjaro-iso-profiles() {
	pkgdesc='Manjaro Linux official iso profiles'
	depends=('manjaro-iso-profiles-base')

	install -d $pkgdir/usr/share/manjaro-tools/iso-profiles
	cp -a $srcdir/official $pkgdir/usr/share/manjaro-tools/iso-profiles/
}

package_manjaro-iso-profiles-community() {
	pkgdesc='Manjaro Linux community iso profiles'
	depends=('manjaro-iso-profiles-base')

	cd ${tarball}-${pkgver}
	install -dm 0755 $pkgdir/usr/share/manjaro-tools/iso-profiles
	cp -a $srcdir/community $pkgdir/usr/share/manjaro-tools/iso-profiles
}

package_manjaro-iso-profiles-community-minimal() {
	pkgdesc='Manjaro Linux openrc profiles'
	depends=('manjaro-iso-profiles-base')

	install -dm 0755 $pkgdir/usr/share/manjaro-tools/iso-profiles
	cp -a $srcdir/community-minimal $pkgdir/usr/share/manjaro-tools/iso-profiles/
}
