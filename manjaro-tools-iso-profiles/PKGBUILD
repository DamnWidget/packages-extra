_mt_ver=0.9.15

pkgbase=manjaro-iso-profiles
pkgname=('manjaro-iso-profiles' 'manjaro-iso-profiles-community' 'manjaro-iso-profiles-community-minimal')
# tarball=manjaro-tools-iso-profiles
pkgver=15.12
pkgrel=1
arch=('any')
url="https://github.com/manjaro/manjaro-tools-iso-profiles"
license=('GPL')
groups=('manjaro-tools')
options=('!strip')
# _gitsource=bb089f223e94fbe579eae8ed31fbb146dddb0cc6
# source=("${pkgname}-${pkgver}-${pkgrel}.tar.gz::${url}/archive/${_gitsource}.tar.gz")
source=("${pkgname}-${pkgver}.tar.gz::$url/archive/${pkgver}.tar.gz")


