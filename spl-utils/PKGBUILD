pkgname=('spl-utils')
pkgver=0.6.4.2
pkgrel=1
pkgdesc='Solaris Porting Layer User-Mode utils'
arch=('i686' 'x86_64')
url='http://zfsonlinux.org/'
source=(http://archive.zfsonlinux.org/downloads/zfsonlinux/spl/spl-$pkgver.tar.gz
        spl-utils.hostid)
groups=('manjarozfs')
sha256sums=('a5ff33fbfc8dfa5b0a7508a511d1affde7bc69185515e7f09af45ed5ab0648ad'
            'ad95131bc0b799c0b1af477fb14fcf26a6a9f76079e48bf090acb7e8367bfd0e')
license=('GPL')

build() {
  cd ${srcdir}/spl-$pkgver
  ./autogen.sh
  ./configure --prefix=/usr --libdir=/usr/lib --sbindir=/usr/bin \
              --with-config=user
  make
}

package() {
  cd ${srcdir}/spl-$pkgver
  make DESTDIR=${pkgdir} install

  install -D -m644 ${srcdir}/spl-utils.hostid ${pkgdir}/etc/hostid
}
