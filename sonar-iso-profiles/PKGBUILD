_mt_ver=0.9.15

pkgname=sonar-iso-profiles
pkgver=15.12
pkgrel=1
pkgdesc='Sonar Linux iso profiles'
arch=('any')
url="https://github.com/manjaro/manjaro-tools-iso-profiles-sonar"
license=('GPL')
#groups=('manjaro-tools')
#depends=('manjaro-iso-profiles-base')
# options=('!strip')
source=("${pkgname}-${pkgver}.tar.gz::$url/archive/${pkgver}.tar.gz")

_inst_dir(){
	install -d $pkgdir/usr/share/manjaro-tools/iso-profiles
	cp -a $srcdir/$1 $pkgdir/usr/share/manjaro-tools/iso-profiles/
}

package() {
	_inst_dir 'sonar'
}
