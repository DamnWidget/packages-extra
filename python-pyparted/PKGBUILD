pkgname=python-pyparted
_pkgname=pyparted
pkgver=3.10.4
pkgrel=1
pkgdesc="Python 3 module for GNU parted"
url="https://github.com/rhinstaller/pyparted"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('python>=3.4' 'parted>=3.0')
provides=('pyparted' 'py3parted')
replaces=('py3parted')
source=("https://github.com/rhinstaller/pyparted/archive/${_pkgname}-${pkgver}.tar.gz")
sha256sums=('1121d6457dac0efa64cd1efe326ba2147c25c27e2ade3e1043cdbd188ab828a1')

build() {
  cd "${srcdir}"/${_pkgname}-${_pkgname}-${pkgver}
  python setup.py build
}

package() {
  cd "${srcdir}"/${_pkgname}-${_pkgname}-${pkgver}
  python setup.py install --prefix=/usr --root="${pkgdir}" --optimize=1 --skip-build
}
